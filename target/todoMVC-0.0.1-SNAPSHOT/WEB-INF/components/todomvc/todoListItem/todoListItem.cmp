<aura:component>
    <aura:attribute name="id" type="Long"/>
    <aura:attribute name="value" type="String"/>
    <aura:attribute name="completed" type="Boolean" default="false"/>
	<aura:attribute name="mode" type="String" default="view"/>
	<aura:registerEvent name="todoModifiedEvent" type="todomvc:todoModified"/>
	
	<li class="{!(v.mode == 'edit' ? 'editing' : '') + ' ' + (v.completed == true ? 'completed' : '')}" dblclick="{!v.edit}">
		<div class="view">
			<ui:inputCheckbox class="toggle" value="{!v.completed}" change="{!c.complete}" />
			<aura:if isTrue="{!v.mode == 'view'}">
				<label ondblclick="{!c.edit}">{!v.value}</label>
				<ui:button class="destroy" label="" theme="" press="{!c.remove}" />
			</aura:if>
		</div>
		<ui:inputText aura:id="new-todo" class="new-todo edit" value="{!v.value}" change="{!c.update}" placeholder="{!v.placeholder}" />
	</li>
</aura:component>